# Environment Variables for Jenkins Scanner

# Node environment
NODE_ENV=production

# Analytics domain
NEXT_PUBLIC_DOMAIN=localhost

# Email services (get from https://resend.com)
RESEND_API_KEY=re_xxxxxxxxxxxx

# Security settings
ALLOWED_ORIGIN=https://yourdomain.com
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Optional: ConvertKit Integration
CONVERTKIT_API_KEY=
CONVERTKIT_FORM_ID=

# Server configuration
PORT=3000
HOST=0.0.0.0

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info
